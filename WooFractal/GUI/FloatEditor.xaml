<UserControl x:Class="WooFractal.GUI.FloatEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="46" d:DesignWidth="330" Loaded="UserControl_Loaded" BorderThickness="0" BorderBrush="#FF9D9D9D" Background="White" xmlns:my="clr-namespace:WooFractal">
    <Grid Name="grid">
        <Label Content="Label" Height="23" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" Width="234" Margin="0,0,0,0" Padding="4,0" VerticalContentAlignment="Center" />
        <Button Content="Set" Height="23" Name="button1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="53" Click="button1_Click" />
        <my:WooSlider Margin="0,22,0,0" x:Name="wooSlider1" VerticalAlignment="Top" Height="25" />
        <Grid Height="25" Margin="0,22,0,0" Name="directEdit" Visibility="Hidden">
            <TextBox Height="25" HorizontalAlignment="Left" Margin="0,0,0,0" Name="textBox1" VerticalAlignment="Top" Width="255" VerticalContentAlignment="Center" />
            <Button Content="Update" Height="25" Name="button2" HorizontalAlignment="Right" Width="80" VerticalAlignment="Top" Click="button2_Click" />
        </Grid>
    </Grid>
</UserControl>
